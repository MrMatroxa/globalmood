generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  ip        String
  responses Response[]
  profile   Profile?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Profile {
  id      String  @id @default(uuid())
  age     Int?
  gender  String?
  country String?
  user    User    @relation(fields: [userId], references: [id])
  userId  String  @unique
}

enum QuestionType {
  SCALE
  MULTIPLE_CHOICE
  OPEN_TEXT
}

model Survey {
  id          String     @id
  title       String
  description String?
  slug        String     @unique
  questions   Question[]
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  responses   Response[]
  insights    Insight[]
}

model Question {
  id        String       @id
  survey    Survey       @relation(fields: [surveyId], references: [id])
  surveyId  String
  text      String
  type      QuestionType
  order     Int
  options   String[]
  createdAt DateTime     @default(now())
  Answer    Answer[]
}

model Response {
  id        String   @id @default(uuid())
  survey    Survey   @relation(fields: [surveyId], references: [id])
  surveyId  String
  user      User?    @relation(fields: [userId], references: [id]) 
  userId    String?
  answers   Answer[]
  createdAt DateTime @default(now())
}

model Answer {
  id         String   @id @default(uuid())
  response   Response @relation(fields: [responseId], references: [id])
  responseId String
  question   Question @relation(fields: [questionId], references: [id])
  questionId String

  textValue       String? // For OPEN_TEXT
  numberValue     Int? // For SCALE (e.g., 7/10)
  selectedOptions SelectedOption[]
}

model SelectedOption {
  id       String @id @default(uuid())
  answer   Answer @relation(fields: [answerId], references: [id])
  answerId String
  value    String
}

// --- INSIGHTS/ANALYTICS ---

model Insight {
  id          String   @id @default(uuid())
  title       String // e.g., "Gen Z vs. Boomers on their mood"
  description String
  survey      Survey?  @relation(fields: [surveyId], references: [id])
  surveyId    String?
  filters     Json? // Criteria used to generate insight (e.g., { age: "18-25" })
  data        Json // Aggregated results (e.g., { "optimismScore": 6.2 })
  createdAt   DateTime @default(now())
}
